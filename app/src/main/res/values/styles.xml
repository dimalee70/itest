    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorUnselectedTab</item>

        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTabTextAppearanceSubject" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorUnselectedTabSubject</item>

        <item name="textAllCaps">false</item>
    </style>
