<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="subjectFragmentViewModel"
            type="itest.kz.viewmodel.ItemSubjectFragmentViewModel"/>
    </data>
    <LinearLayout
        android:id="@+id/subject_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="20dp">
        <!--android:onClick="@{subjectFragmentViewModel::onItemClick}"-->

        <!--<android.support.v7.widget.CardView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:padding="10dp"-->
            <!--android:layout_margin="20dp">-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:background="@color/colorWhite"
                android:layout_gravity="center">
                <!--android:layout_marginRight="20dp"-->
                <!--android:layout_marginBottom="5dp"-->
                <!--android:layout_marginLeft="20dp"-->
                <!--android:layout_marginTop="5dp"-->


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <itest.kz.view.customviews.CustomTextView
                        android:id="@+id/titleSubject"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:text="@{subjectFragmentViewModel.title}"
                        android:textColor="@{subjectFragmentViewModel.textColor}"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        style="@android:style/TextAppearance.Medium"
                        android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"

                        />
                    <!--android:drawableTint="@{subjectFragmentViewModel.colorIcon}"-->


                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:id="@+id/expand_cardview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@{subjectFragmentViewModel.cardColor}"
                    android:visibility="gone">
                    <!--android:visibility="@{subjectFragmentViewModel.buttonsVisible}"-->

                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_height="wrap_content" android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:id="@+id/subItem"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:id="@+id/expand_linear_buttons"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginLeft="20dp">

                            <Button
                                android:id="@+id/Button01"
                                android:layout_width="110dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:background="@drawable/btn_rounded"
                                android:onClick="@{subjectFragmentViewModel::clickMat}"
                                android:text="Материалы"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:textAlignment="center">

                            </Button>

                            <Button
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:id="@+id/Button02"
                                android:layout_width="110dp"
                                android:layout_height="40dp"
                                android:layout_toRightOf="@+id/Button01"
                                android:layout_marginLeft="30dp"
                                android:onClick="@{subjectFragmentViewModel::clickTest}"
                                android:background="@drawable/btn_rounded_blue"
                                android:text="test"
                                android:textColor="@color/colorWhite"
                                android:layout_marginRight="20dp">

                            </Button>

                            <!--android:visibility="@{subjectFragmentViewModel.buttonVisible}"-->
                        </LinearLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <!--<Button-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@id/titleSubject"-->
                <!--android:text="@string/login"-->
                <!--android:visibility="visible" />-->

                <!--<Button-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="@string/login"-->
                <!--android:visibility="visible" />-->
            </LinearLayout>
        <!--</android.support.v7.widget.CardView>-->

    </LinearLayout>


</layout>