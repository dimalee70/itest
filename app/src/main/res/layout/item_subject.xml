<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="subjectFragmentViewModel"
            type="itest.kz.viewmodel.ItemSubjectFragmentViewModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="@{subjectFragmentViewModel::onItemClick}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:background="@drawable/back"
            android:layout_gravity="center">


            <itest.kz.view.customviews.CustomTextView
                android:id="@+id/titleSubject"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="30dp"
                android:text="@{subjectFragmentViewModel.title}"
                android:textColor="@color/colorText"
                style="@android:style/TextAppearance.Medium" />

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:id="@+id/subItem"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <Button
                        android:layout_gravity="center"
                        android:text="Материалы"
                        android:id="@+id/Button01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{subjectFragmentViewModel.clickMat}">
                    </Button>

                    <Button
                        android:text="test"
                        android:id="@+id/Button02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/Button01"
                        android:onClick="@{subjectFragmentViewModel.clickTest}">
                    </Button>

                </LinearLayout>

            </RelativeLayout>
            <!--<Button-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/titleSubject"-->
            <!--android:text="@string/login"-->
            <!--android:visibility="visible" />-->

            <!--<Button-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/login"-->
            <!--android:visibility="visible" />-->
        </LinearLayout>
    </LinearLayout>


</layout>