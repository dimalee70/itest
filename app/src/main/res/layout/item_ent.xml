<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <variable
            name="ent"
            type="itest.kz.viewmodel.ItemEntViewModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/cardview_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp">

                <TextView
                    android:id="@+id/subject_title_text"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{ent.name}"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/my_open_sans_regular"
                    android:drawableEnd="@{ent.icon}"
                    />

                <!--android:drawableEnd="@drawable/ic_check"-->
                <!--android:drawableEnd="@{end.icon}"-->


                <!--<ImageView-->
                    <!--android:id="@+id/ivMap"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_above="@+id/selectLanguage"-->
                    <!--android:layout_gravity="right"-->
                    <!--android:src="@drawable/ic_check" -->
                    <!--/>-->

            <View
                android:layout_below="@+id/subject_title_text"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorGray" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

</layout>