<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="profile"
            type="itest.kz.viewmodel.ProfileFragmentViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_profile"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:theme="@style/ToolbarColoredBackArrow"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="73dp"
                    android:textSize="20sp"
                    android:layout_gravity="left"
                    android:id="@+id/toolbar_title" />

        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_below="@+id/toolbar_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/main_info_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <!--<RelativeLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content">-->


                <!--<LinearLayout-->
                    <!--android:id="@+id/linear_layout"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content">-->

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/colorPrimaryDark"
                        android:dividerHeight="0px"
                        >

                        <RelativeLayout
                            android:id="@+id/main_info_relative"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="20dp"
                            android:layout_marginLeft="10dp">

                            <!--android:paddingTop="10dp"-->
                            <!--android:paddingRight="10dp"-->
                            <!--android:paddingBottom="10dp"-->
                            <!--android:paddingLeft="20dp"-->

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/profilePhoto"
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:src="@{profile.profileImage}"/>
                                <!--app:imageUrl="@{profile.imageUrl}"/>-->
                            <!--app:civ_border_color="#FF000000"-->
                            <!--app:civ_border_width="2dp"-->

                            <RelativeLayout
                                android:id="@+id/main_text_relative"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/profilePhoto"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20dp">
                                <TextView
                                    android:id="@+id/name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@{profile.name}"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorBlack"
                                    android:fontFamily="sans-serif"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/name"
                                    android:text="@{profile.email}"
                                    android:fontFamily="sans-serif"
                                    android:textSize="14sp"/>
                            </RelativeLayout>



                        </RelativeLayout>

                    </android.support.v7.widget.CardView>
            </LinearLayout>






            <android.support.v7.widget.CardView
                android:id="@+id/cardview_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_info_linear">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--<android.support.v7.widget.CardView-->
                        <!--android:id="@+id/info_relative"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content">-->
                        <RelativeLayout
                            android:id="@+id/info_relative"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp"
                            android:layout_marginLeft="10dp">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:onClick="@{profile.clickInfo}">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:id="@+id/pencil"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:src="@drawable/ic_pencil_main" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_marginLeft="20dp"
                                        android:layout_centerInParent="true"
                                        android:textColor="@color/colorBlack"
                                        android:layout_height="wrap_content"
                                        android:layout_toRightOf="@+id/pencil"
                                        android:textSize="16sp"
                                        android:text="@string/profileInfoKaz" />
                                </RelativeLayout>

                            </android.support.v7.widget.CardView>


                        </RelativeLayout>

                    <!--</android.support.v7.widget.CardView>-->

                <View
                    android:id="@+id/info_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/info_relative"
                    android:layout_marginLeft="80dp"
                    android:background="@color/colorDivider" />

                <!--<android.support.v7.widget.CardView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_below="@+id/info_relative">-->

                    <RelativeLayout
                        android:id="@+id/password_relative"
                        android:layout_below="@+id/info_divider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:layout_marginLeft="10dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/password"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:src="@drawable/ic_password_main" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_marginLeft="20dp"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/colorBlack"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/password"
                                    android:textSize="16sp"
                                    android:text="@string/passwordKaz" />
                            </RelativeLayout>

                        </android.support.v7.widget.CardView>


                    </RelativeLayout>
                    <View
                        android:id="@+id/password_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/password_relative"
                        android:layout_marginLeft="80dp"
                        android:background="@color/colorDivider" />

                    <RelativeLayout
                        android:id="@+id/lang_relative"
                        android:layout_below="@+id/password_divider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:layout_marginLeft="10dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/lang"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:src="@drawable/ic_lang_main" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_marginLeft="20dp"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/colorBlack"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/lang"
                                    android:textSize="16sp"
                                    android:text="@string/langKaz" />
                            </RelativeLayout>

                        </android.support.v7.widget.CardView>


                    </RelativeLayout>
                    <View
                        android:id="@+id/lang_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/lang_relative"
                        android:layout_marginLeft="80dp"
                        android:background="@color/colorDivider" />

                    <RelativeLayout
                        android:id="@+id/agreement_relative"
                        android:layout_below="@+id/lang_divider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:layout_marginLeft="10dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/agreement"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:src="@drawable/ic_agreement_main" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_marginLeft="20dp"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/colorBlack"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/agreement"
                                    android:textSize="16sp"
                                    android:text="@string/agreementKaz" />
                            </RelativeLayout>

                        </android.support.v7.widget.CardView>


                    </RelativeLayout>

                    <View
                        android:id="@+id/agreement_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/agreement_relative"
                        android:layout_marginLeft="80dp"
                        android:background="@color/colorDivider" />


                <!--</android.support.v7.widget.CardView>-->

            </RelativeLayout>
        </android.support.v7.widget.CardView>


        </RelativeLayout>
        </ScrollView>

    </RelativeLayout>




</layout>