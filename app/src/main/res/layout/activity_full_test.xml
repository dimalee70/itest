<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="full"
            type="itest.kz.viewmodel.FullTestViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundCardView">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/progressBar1"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:indeterminate="true"
                    android:visibility="@{full.progress}"/>
            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/my_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:elevation="4dp"
                android:contentInsetStart="0dp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        android:id="@+id/text_view_relative"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <!--android:layout_marginRight="200dp"-->


                        <ImageButton
                            android:id="@+id/imageButtonTitle"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="right"
                            android:layout_centerVertical="true"
                            android:background="?attr/selectableItemBackground"
                            android:src="@drawable/ic_iconfinder_connect_direction_path_way_2203530"
                            android:clickable="true"/>

                        <TextView
                            android:id="@+id/text_view_title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="20sp"
                            android:textColor="@color/colorWhite"
                            android:ellipsize="end"
                            android:layout_marginTop="14dp"
                            android:textAlignment="center"
                            android:layout_marginEnd="20dp"
                            android:maxLines="1"
                            android:fontFamily="@font/my_open_sans_regular"/>


                        <!--<TextView-->
                            <!--android:id="@+id/text_view_title"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="match_parent"-->
                            <!--android:textSize="20sp"-->
                            <!--android:text="@{result.title}"-->
                            <!--android:textColor="@color/colorWhite"-->
                            <!--android:ellipsize="end"-->
                            <!--android:layout_marginTop="14dp"-->
                            <!--android:textAlignment="center"-->
                            <!--android:layout_marginEnd="20dp"-->
                            <!--android:maxLines="1"-->
                            <!--android:fontFamily="@font/my_open_sans_regular"/>-->

                        <!--android:layout_centerInParent="true"-->
                        <!--android:layout_marginStart="50dp"-->
                        <!---->


                        <ImageButton
                            android:id="@+id/buttonFinishTest"
                            android:layout_width="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_icon_x"
                            android:layout_marginRight="16dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"/>
                        <!--android:layout_marginRight="30dp"-->

                    </RelativeLayout>

                </RelativeLayout>


            </android.support.v7.widget.Toolbar>


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:contentInsetStart="0dp"
                android:padding="0dp"
                android:contentInsetLeft="10dp"
                android:contentInsetRight="10dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp"
                android:background="@color/colorWhite"
                android:minHeight="?attr/actionBarSize">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/button_back_relative"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true">

                        <ImageButton
                            android:id="@+id/buttonBack"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="left"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/ic_icon_strelka"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_toRightOf="@+id/button_back_relative"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="40dp">

                        <TextView
                            android:id="@+id/text_number_pager"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/colorPrimary"
                            android:layout_centerInParent="true"
                            android:textSize="18sp"/>
                        <!--android:textAlignment="center"-->

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true">

                        <ImageButton
                            android:id="@+id/buttonForward"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="right"
                            android:layout_centerVertical="true"
                            android:src="@drawable/rotate_ic_icon_strelka"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"

                            />
                    </RelativeLayout>
                </RelativeLayout>


            </android.support.v7.widget.Toolbar>



            <RelativeLayout
                android:id="@+id/list_subject_relative"
                android:layout_width="match_parent"
                android:layout_below="@+id/my_toolbar"
                android:layout_height="wrap_content">



                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list_subjects"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackgroundCardView"
                    android:clickable="false"
                    android:clipToPadding="false"
                    android:focusable="false"
                    android:orientation="horizontal"
                    android:scrollbars="vertical"
                    android:layout_marginEnd="10dp"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    tools:listitem="@layout/item_full_subject" />

            </RelativeLayout>

            <TextView
                android:id="@+id/timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:visibility="@{full.timeVisibility}"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/list_subject_relative"
                android:textSize="20sp"/>
            <!--<android.support.v4.widget.NestedScrollView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content">-->


            <RelativeLayout
                android:layout_below="@+id/timer"
                android:layout_width="match_parent"
                android:layout_marginBottom="60dp"
                android:layout_height="wrap_content">

                <itest.kz.util.CustomViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >
                </itest.kz.util.CustomViewPager>
            </RelativeLayout>

            <!--</android.support.v4.widget.NestedScrollView>-->

        </RelativeLayout>


    </LinearLayout>




    <!--</LinearLayout>-->
<!--</android.support.design.widget.CoordinatorLayout>-->
    <!--</ScrollView>-->
</layout>